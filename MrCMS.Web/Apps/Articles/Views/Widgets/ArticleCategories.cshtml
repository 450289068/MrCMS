@using System.Activities.Statements
@using MrCMS.Web.Apps.Articles.Pages
@model MrCMS.Web.Apps.Articles.Widgets.ArticleCategories
@{
    var list = ViewData["ArticleLists"] as ArticleList;
}
@{
    if (Model.ShowNameAsTitle)
    {
        <h4>@Model.Name</h4>
    }
}
<ul class="nav nav-pills nav-stacked">
    @foreach (var category in Model.ArticleList.Tags)
    {
        <li><a href="/@Model.ArticleList.LiveUrlSegment?category=@category.Name">@category.Name</a></li>
    }
</ul>
