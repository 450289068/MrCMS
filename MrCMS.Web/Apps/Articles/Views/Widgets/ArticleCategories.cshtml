@using MrCMS.Entities.Documents
@using MrCMS.Web.Apps.Articles.Pages
@model MrCMS.Web.Apps.Articles.Widgets.ArticleCategories
@{
    var list = ViewData["ArticleLists"] as ArticleSection;
    string currentCategory = Request["category"];
}
@{
    if (Model.ShowNameAsTitle)
    {
        <h4>@Model.Name</h4>
    }
}
<ul class="nav nav-pills nav-stacked">
    @foreach (Tag category in Model.ArticleSection.Tags)
    {
        <li class="@((!string.IsNullOrEmpty(currentCategory) && currentCategory == category.Name) ? "active" : "")">
            <a href="/@Model.ArticleSection.LiveUrlSegment?category=@category.Name">@category.Name</a>
        </li>
    }
</ul>