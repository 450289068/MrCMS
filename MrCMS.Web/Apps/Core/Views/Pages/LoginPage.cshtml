@using Microsoft.Owin.Security
@using MrCMS.Helpers
@using MrCMS.Web.Apps.Core.Models
@using MrCMS.Web.Apps.Core.Pages
@model MrCMS.Web.Apps.Core.Pages.LoginPage

@Editable(Model, page => page.BodyContent, true)

<div class="row">
    <div class="col-lg-4">
        <h1>Login</h1>
        <hr />
        @{
            var loginModel = ViewData["login-model"] as LoginModel;
            Html.RenderPartial("LoginBox", loginModel);
        }
        @{Html.RenderAction("Providers", "ExternalLogin", new { returnUrl = loginModel.ReturnUrl });}
    </div>
    <div class="col-lg-8">
        <h2 class="not-registered">Not registered?</h2>
        <hr />
        <a href="@(UniquePageHelper.GetUrl<RegisterPage>())" class="btn btn-default">
            <span class="glyphicon glyphicon-ok-sign"></span> Click here to register
        </a>
    </div>
</div>
