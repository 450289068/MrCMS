@using MrCMS.Helpers
@using MrCMS.Web.Apps.Core.Pages
@model LoginPage
@using (Html.BeginForm())
{
    <p>&nbsp;</p>
    <div class="row">
        <div class="span2">&nbsp;</div>
        <div class="span8">

            <div class="control-group">
                <div class="controls">
                    <h4>Login</h4>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="Email">Email</label>
                <div class="controls">
                    @Html.TextBoxFor(model => model.LoginModel.Email)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="Password">
                    Password</label>
                <div class="controls">
                    @Html.PasswordFor(model => model.LoginModel.Password)
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <label class="checkbox">
                        @Html.CheckBoxFor(model => model.LoginModel.RememberMe)
                        Remember me
                    </label>
                    <input type="submit" value="Login" class="btn" />
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <a href="@(UniquePageHelper.GetUrl<ForgottenPasswordPage>())">Forgotten password?</a>
                </div>
            </div>

            @if (!String.IsNullOrEmpty(Model.LoginModel.Message))
            {
                <div class="alert alert-error">
                    @Model.LoginModel.Message
                </div>
            }

        </div>
        <div class="span2">
        </div>
    </div>
}
