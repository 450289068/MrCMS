@model MrCMS.Tasks.ScheduledTask

@using (Html.BeginForm("Add", "Task", FormMethod.Post))
{
    <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
        <h3>Add Task</h3>
    </div>
    <div class="modal-body">
        @Html.LabelFor(task => task.Type)
        @Html.DropDownListFor(task => task.Type, Model.GetTypeOptions(), new { data_val = "true", data_val_required = "Please select a task type" })
        @Html.ValidationMessageFor(task => task.Type)
        @Html.LabelFor(task => task.EveryXMinutes)
        @Html.TextBoxFor(task => task.EveryXMinutes)
        @Html.ValidationMessageFor(task => task.EveryXMinutes)
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Close</a>
        <input type="submit" class="btn-primary btn" value="Add task" />
    </div>
}