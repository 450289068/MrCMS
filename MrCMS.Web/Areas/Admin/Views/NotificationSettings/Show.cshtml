@using MrCMS.Helpers
@model MrCMS.Entities.UserProfile.NotificationSettings

@using (Html.BeginForm("Update", "NotificationSettings", FormMethod.Post))
{
    <div class="row-fluid">
        <div class="span6">
            @Html.InlineCheckboxFor(settings => settings.PersistentNotificationsEnabled)
            @Html.InlineCheckboxFor(settings => settings.TransientNotificationsEnabled)
        </div>
        <div class="span6">
            @Html.LabelFor(settings => settings.LastMarkedAsRead)
            @Html.EditorFor(settings => settings.LastMarkedAsRead)
        </div>
    </div>
}