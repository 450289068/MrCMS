@using MrCMS.Web.Areas.Admin.Models.SEOAnalysis
@model MrCMS.Web.Areas.Admin.Models.SEOAnalysis.SEOAnalysisResult
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th></th>
            <th>Check
            </th>
            <th>Messages
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var facet in Model.OrderByDescending(facet => facet.Status).ThenBy(facet => facet.Importance).ThenBy(x=>x.Name))
        {
            var icon = "";
            switch (facet.Status)
            {
                case SEOAnalysisStatus.CanBeImproved:
                    icon = "icon-arrow-right";
                    break;
                case SEOAnalysisStatus.Error:
                    icon = "icon-remove";
                    break;
                case SEOAnalysisStatus.Success:
                    icon = "icon-ok";
                    break;
                case SEOAnalysisStatus.Problem:
                    icon = "icon-remove";
                    break;
            }
            <tr class="@facet.Status.ToString().ToLower()">
                <td data-status="true" class="text-center"><i class="@icon"></i></td>
                <td>
                    @facet.Name
                </td>
                <td>
                    @if (facet.Messages.Any())
                    {
                        <ul style="margin-bottom:0;">
                            @foreach (var message in facet.Messages)
                            {
                                <li>@message</li>
                            }
                        </ul>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
