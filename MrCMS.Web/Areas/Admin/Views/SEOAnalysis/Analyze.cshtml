@model MrCMS.Web.Areas.Admin.Models.SEOAnalysis.SEOAnalysisResult

<h5>Summary</h5>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Name
            </th>
            <th>Message
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var facet in Model.OrderByDescending(facet => facet.Importance).ThenBy(facet => facet.Name))
        {
            <tr class="@facet.Status.ToString().ToLower()">
                <td>
                    @facet.Name
                </td>
                <td>
                    @if (facet.Messages.Any())
                    {
                        <ul style="margin-bottom:0;">
                            @foreach (var message in facet.Messages)
                            {
                                <li>@message</li>
                            }
                        </ul>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
