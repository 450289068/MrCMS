@model MrCMS.Web.Areas.Admin.Controllers.AddPageWidgetModel
<div class="modal-header">
    <a class="close" data-dismiss="modal">×</a>
    <h3>Add widget</h3>
</div>
@using (Html.BeginForm("AddPageWidget", "Widget", new { id = "", layoutAreaId = Model.LayoutAreaId, pageId = Model.PageId }, FormMethod.Post))
{
    <div class="modal-body">
        @if (Request.UrlReferrer != null)
        {
            <text>
            @Html.Hidden("returnUrl", Request.UrlReferrer.ToString())
            </text>
        }
        @Html.Label("WidgetType", "Widget Type")
        @Html.DropDownList("WidgetType", Model.Types)
        <br />
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name, Model.Name)

        @Html.LabelFor(widget => widget.IsRecursive, "Is Recursive")
        @Html.EditorFor(widget => widget.IsRecursive)
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Close</a>
        <input type="submit" class="btn-success btn" value="Add widget" />
    </div>
}