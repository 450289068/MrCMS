@model MrCMS.Entities.People.UserRole

@{
    Layout = null;
}
@using (Html.BeginForm("Delete", "Role", FormMethod.Post))
{
    <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
        <h3>Delete Role</h3>
    </div>
    <div class="modal-body">
        Are you sure you want to delete the role @Model.Name ? Deleting this role will delete all user mappings and can not be undone.
        <br />
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Close</a>
        <input type="submit" class="btn-primary btn" value="Delete role" />
    </div>
}