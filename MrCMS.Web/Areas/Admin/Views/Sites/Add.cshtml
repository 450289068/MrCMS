@model MrCMS.Entities.Multisite.Site

@using (Html.BeginForm("Add", "Sites", FormMethod.Post))
{
    <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
        <h3>Add Site</h3>
    </div>
    <div class="modal-body">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name)
        @Html.ValidationMessageFor(x => x.Name)
        @Html.LabelFor(x => x.BaseUrl)
        @Html.TextBoxFor(x => x.BaseUrl)
        @Html.ValidationMessageFor(x => x.BaseUrl)
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Close</a>
        <input type="submit" class="btn-primary btn" value="Add site" />
    </div>
}