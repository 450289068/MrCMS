@model MrCMS.Entities.Documents.Web.FormProperties.FormPropertyWithOptions
<div class="row">
    <div class="col-lg-7">
    <h5>@Resource("Admin Webpage Form Option","Options")</h5>
    </div>
    <div class="col-lg-5">
        <div class="pull-right btn-group">
            @Html.ActionLink("Add Option", "AddOption", "Form", new { id = Model.Id }, new { @class = "btn btn-xs btn-primary", data_toggle = "fb-modal" })
        </div>
    </div>
    <table class="table table-condensed table-striped table-bordered">
        <thead>
            <tr>
                <th>@Resource("Value")</th>
                <th>@Resource("Admin Webpage Form Option Selected", "Selected")</th>
                <th>@Resource("Actions")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var option in Model.Options)
            {
                <tr>
                    <td>@option.Value</td>
                    <td>@option.Selected</td>
                    <td>
                        <div class="btn-group">
                            @Html.ActionLink(Resource("Edit"), "EditOption", "Form", new { id = option.Id }, new { @class = "btn btn-xs", data_toggle = "fb-modal" })
                            @Html.ActionLink(Resource("Delete"), "DeleteOption", "Form", new { id = option.Id }, new { @class = "btn btn-xs btn-danger", data_toggle = "fb-modal" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
