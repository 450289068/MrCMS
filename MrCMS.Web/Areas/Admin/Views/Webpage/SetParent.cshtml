@using MrCMS.Helpers
@model MrCMS.Entities.Documents.Web.Webpage

@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("SetParent", "Webpage", new { id = "" }, FormMethod.Post, new { @class = "update-parent-form" }))
{
    <div class="modal-header">
        <h3>Set parent</h3>
    </div>
    <div class="modal-body">
        @Html.HiddenFor(x => x.Id)
        
    </div>
}
<div class="modal-footer">
    <input type="button" class="btn-primary btn submit-form-btn" value="Set parent" />
</div>
@{ Html.IncludeScript("~/Areas/Admin/Content/Scripts/custom/set-parent.js"); }