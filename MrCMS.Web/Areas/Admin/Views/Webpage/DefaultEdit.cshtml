@using MrCMS.Entities.Documents.Web
@using MrCMS.Helpers
@model Webpage
<ul class="nav nav-tabs margin-top-10" data-stickytabs="webpage-@Model.Id">
    <li class="active"><a href="#edit-content" data-toggle="tab">@Resource("Admin Webpage Edit Tab", "Edit")</a></li>
    <li><a href="#edit-seo" data-toggle="tab">@Resource("Admin Webpage SEO Tab", "SEO & Properties")</a></li>
    <li><a href="#layout-content" data-toggle="tab">@Resource("Admin Webpage Layout Tab", "Layout")</a></li>
    <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">@Resource("Admin Webpage Form Tab", "Form")&nbsp;<b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li><a href="#form-properties-tab" data-toggle="tab">@Resource("Admin Webpage Form Fields", "Fields")</a></li>
            <li><a href="#form-design-tab" data-toggle="tab">@Resource("Admin Webpage Form Design", "Design")</a></li>
            <li><a href="#postings-tab" data-toggle="tab">@Resource("Admin Webpage Form Entries", "Entries") (@Model.FormPostingsCount())</a></li>
            <li><a href="#form-message-tab" data-toggle="tab">@Resource("Admin Webpage Form Settings", "Settings")</a></li>
        </ul>
    </li>
    <li><a href="#versions" data-toggle="tab" id="versions-link" data-id="@Url.RequestContext.RouteData.Values["id"]">@Resource("Admin Webpage Tab Versions", "Versions")</a></li>
    <li><a href="#permissions" data-toggle="tab">@Resource("Admin Webpage Tab Permission", "Permissions")&nbsp;</a></li>
</ul>
<div class="tab-content">
    @{Html.RenderPartial("Properties", Model);}
    @{Html.RenderPartial("SEO", Model);}
    @{Html.RenderPartial("Layout", Model); }
    @{Html.RenderPartial("FormProperties", Model);}
    @{Html.RenderPartial("FormDesign", Model);}
    @{Html.RenderPartial("FormPostings", Model);}
    @{Html.RenderPartial("FormMessage", Model);}
    @{Html.RenderPartial("PageVersions", Model);}
    @{Html.RenderPartial("Permissions", Model);}
</div>
@{ Html.IncludeScript("~/Areas/Admin/Content/Scripts/mrcms/edit-webpage.js"); }