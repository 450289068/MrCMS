@using MrCMS.Helpers
@using MrCMS.Logging
@model MrCMS.Paging.IPagedList<MrCMS.Logging.LogEntry>

@{
    ViewBag.Title = "Logs";
}

<div class="row-fluid">
    <div class="span4">
        <h2>Logs</h2>
    </div>
    <div class="span8">
        <div class="display-inline  pull-right">
            @using (Html.BeginForm())
            {
                @Html.DropDownList("type", Enum.GetValues(typeof(LogEntryType)).OfType<LogEntryType>().BuildSelectItemList(type => type.ToString(), type => type.ToString(), type => type.ToString() == Request["type"], "All"))
                <input class="btn btn-primary btn-mini" type="submit" value="Update" />
            }
        </div>
    </div>
</div>
<div class="row-fluid">
    <table class="table table-striped table-bordered" style="overflow: scroll">
        <tr>
            <th>Date
            </th>
            <th>Message
            </th>
            <th>Type 
            </th>
            <th>Actions
            </th>
        </tr>
        @foreach (var entry in Model)
        {
            <tr>
                <td>
                    @entry.CreatedOn.ToString("dd/MM/yyyy HH:mm")
                </td>
                <td>
                    @entry.Message
                </td>
                <td>
                    @entry.CreatedOn
                </td>
                <td>
                    @Html.ActionLink("Show", "Show", new { id = entry.Id })
                </td>
            </tr>
        }
    </table>
</div>

@Html.Pager(Model, "Index", i => new { page = i })