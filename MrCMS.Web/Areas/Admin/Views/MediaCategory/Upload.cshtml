@using MrCMS.Helpers
@using MrCMS.Settings
@using MrCMS.Website
@model MrCMS.Entities.Documents.Media.MediaCategory

@if (Model != null)
{
    using (Html.BeginForm("Files", "File", new { Id = Model.Id }, FormMethod.Post, new { id = "fileuploadform", enctype = "multipart/form-data", @class = "form-fileUpload" }))
    {
        <div class="row-fluid">
            <div class="span3">
                <span class="btn btn-success fileinput-button">
                    <i class="icon-plus"></i>
                    <span>Select files...</span>
                    <input id="fileupload" type="file" name="files[]" multiple />
                </span>
            </div>
            <div class="span9">
                <div id="progress" class="progress" style="height: 30px; display: none; margin-bottom: 5px;">
                    <div class="bar"><span id="percent-complete" style="text-align:center;"></span></div>
                </div>
            </div>
        </div>
        <div id="files" class=""></div>
    }

    <input type="hidden" id="allowedFileTypes" value="@(MrCMSApplication.Get<MediaSettings>().AllowedFileTypes)"/>
    <input type="hidden" id="maxFileSizeUpload" value="@(MrCMSApplication.Get<MediaSettings>().MaxFileSizeUpload)"/>
    
    <div id="dropzone"><span>Drop files here</span></div>
    
}