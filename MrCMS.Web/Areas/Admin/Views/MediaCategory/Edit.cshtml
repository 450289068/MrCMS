@using MrCMS.Helpers
@model MrCMS.Entities.Documents.Media.MediaCategory
@{
    ViewBag.Title = "Edit | " + Model.Name;

    Html.IncludeScript("~/Areas/Admin/Content/Scripts/mrcms/media-uploader.js");
    Html.IncludeScript("~/Areas/Admin/Content/Scripts/mrcms/media-category.js");
}

@if (TempData["saved"] != null)
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @TempData["saved"]
    </div>
}

@using (Html.BeginForm("Edit", "MediaCategory", new { id = Model.Id }, FormMethod.Post, new { id = "edit-media", target = "_top" }))
{
    <fieldset>
        <legend>@Model.Name
            <span class="btn-group  display-inline  pull-right">
                <a href="@Url.Action("SortFiles", "MediaCategory", new { id = Model.Id })" class="btn ">Sort</a>
                @if (Model.CanDelete)
                {
                    <a href="@Url.Action("Delete", "MediaCategory", new { id = Model.Id })" class="btn btn-danger" data-toggle="fb-modal">Delete</a>
                }
                <input type="submit" class="btn btn-primary" value="Save">
            </span>
        </legend>

        <div class="row-fluid">
            <div class="span12">
                @Html.LabelFor(x => x.Name, "Folder Name")
                @Html.TextBoxFor(x => x.Name, new { @class = "span12" })
                <label class="checkbox">
                    @Html.CheckBoxFor(x => x.IsGallery) Allow use as gallery?
                </label>
            </div>
        </div>
    </fieldset>
}

@{ Html.RenderPartial("Upload", Model); }

@{Html.RenderAction("ShowFiles", "File", new { Model });}
