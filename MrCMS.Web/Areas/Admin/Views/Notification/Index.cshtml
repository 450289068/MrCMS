@using MrCMS.Entities.Notifications
@using MrCMS.Helpers
@using MrCMS.Paging
@model MrCMS.Web.Areas.Admin.Models.NotificationSearchQuery
@{
    var results = ViewData["results"] as IPagedList<Notification> ?? PagedList<Notification>.Empty;
}
@using (Html.BeginForm("Index", "Notification", FormMethod.Get))
{
    <fieldset>
        <legend>Notifications
            <span class="btn-group display-inline pull-right">
                <input type="submit" class="btn btn-primary" value="Search" />
                @Html.ActionLink("Push", "Push", "Notification", new { }, new { @class = "btn", data_toggle = "fb-modal" })
            </span>
        </legend>

        <div class="row-fluid">
            <div class="span4">
                @Html.LabelFor(query => query.Message)
                @Html.TextBoxFor(query => query.Message, new { @class = "span12" })
            </div>
            <div class="span2">
                @Html.LabelFor(query => query.From)
                @Html.TextBoxFor(query => query.From, new { @class = "date-time-picker span12" })
            </div>
            <div class="span2">
                @Html.LabelFor(query => query.To)
                @Html.TextBoxFor(query => query.To, new { @class = "date-time-picker span12" })
            </div>
        </div>
    </fieldset>
}

@if (results.Count == 0)
{
    @:No notifications.
        }
else
{
    <table class="table table-striped table-condensed" style="overflow: scroll">
        <thead>
            <tr>
                <th>Date
                </th>
                <th>Message
                </th>
                <th>User
                </th>
                <th>Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var notification in results)
            {
                <tr>
                    <td>
                        @notification.CreatedOn.ToString("dd/MM/yyyy HH:mm")
                    </td>
                    <td>
                        @notification.Message
                    </td>
                    <td>
                        @notification.UserName
                    </td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
}
@Html.Pager(results, "Index", page => new { page })