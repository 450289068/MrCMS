@using MrCMS.Website
<nav class="navbar navbar-default" role="navigation">
    <div class="navbar-inner">
        <div class="container-fluid">
            <div class="nav-collapse">

              <a href="/Admin"> <img src="/Areas/Admin/Content/Images/logo.png" class="display-inline" style="display: inline; float: left; margin-top: 5px;" /></a> 

                @{ Html.RenderAction("Get", "NavLinks");}

                <form class="navbar-form navbar-left" role="search" action="@Url.Action("Index", "Search")" method="GET">
                    <div class="form-group">
                        @Html.TextBox("term", "", new { @class = "search-query form-control", placeholder = "Search", autocomplete = "off" })
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
                <div class="nav pull-right">
                    @{ Html.RenderAction("Get", "SiteList"); }
                </div>
                @if (!CurrentRequestData.CurrentUser.DisableNotifications)
                {
                    Html.RenderAction("Navbar", "PersistentNotification");
                }
            </div>
        </div>
    </div>
</nav>
