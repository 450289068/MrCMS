@model dynamic

<ul class="nav pull-right">
    <li class="dropdown">
        <a href="#" data-toggle="dropdown">Notifications: <span data-notification-count="true">-</span> <b class="caret"></b></a>
        <div class="dropdown-menu" style="padding-bottom: 0; width: 350px;">
            @using (Html.BeginForm("MarkAllAsRead", "PersistentNotification", FormMethod.Post, new { @style = "margin:0", data_mark_all_as_read = true }))
            {
                <div class="row-fluid">
                    <div class="span12 text-center">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-mini">
                                Dismiss all
                            </button>
                            <a href="@Url.Action("Index", "Notification")" class="btn btn-mini">View All</a>
                        </div>
                    </div>
                </div>
            }
            <ul data-notification-list="true" class="persistent-notification">
                <li>No notifications</li>
            </ul>
        </div>
    </li>
</ul>
